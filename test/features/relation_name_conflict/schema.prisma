datasource db {
	provider = "sqlite"
	url      = env("__REPLACE__")
}

generator db {
	provider          = "go run github.com/vnsoft2014/prisma-client-go"
	output            = "."
	disableGoBinaries = true
	package           = "composite"
}

// the commented combinations were creating a conflict before

model a {
	id String @id

	// combination 1
	XRelation b?
}

model b {
	id  String @id
	aID String @unique
	a   a      @relation(fields: [aID], references: [id])
}

// combination 2
model x {
	id String @id
}

// combination 3
model XRelation {
	id String @id
}
