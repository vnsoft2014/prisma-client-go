datasource db {
  provider = "sqlite"
  url      = env("__REPLACE__")
}

generator db {
  provider          = "go run github.com/vnsoft2014/prisma-client-go"
  output            = "."
  disableGoBinaries = true
  package           = "db"
}

model User {
  id String @id @default(cuid())

  username String @unique
  email    String @unique
  password String

  posts Post[]
}

model Post {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
